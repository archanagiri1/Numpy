import numpy as np


# array indexing and slicing

# indexing-access individual charaters in a string using their index
# slicing-A feature that enable accessing part of the sequence syntax:array_name[start:stop:step]
# stop index, that is not included output

a = np.array([1,2,3,4,5])
print(a)

print(a[0])

print(a[0:2])

arr2=np.array([[1,2,3],[4,5,6]])
print(arr2)

print(arr2[0])

print(arr2[1])

print(arr2[0][1])


print(arr2[1])
print(arr2[1:])

print(arr2[:,2])